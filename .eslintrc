{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"array-bracket-newline": 0,
		"array-callback-return": 1,
		"brace-style": 1,
		"complexity": 0,
		"consistent-return": 1,
		"curly": 1,
		"eqeqeq": 1,
		"func-style": 1,
		"max-depth": 0,
		"max-lines-per-function": 1,
		"max-statements": 0,
		"multiline-comment-style": 0,
		"no-else-return": 1,
		"no-lonely-if": 1,
		"no-negated-condition": 1,
		"no-param-reassign": 1,
		"no-shadow": 1,
		"no-template-curly-in-string": 0,
		"no-use-before-define": 1,
		"no-useless-escape": 1,
		"nonblock-statement-body-position": 1,
		"prefer-regex-literals": 1,
		"quotes": 1,
		"wrap-regex": 1,
	},

	"overrides": [
		{
			"files": "example/**",
			"rules": {
				"no-console": 0,
			},
		},
	],
}
